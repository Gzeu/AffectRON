# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/affectron
REDIS_URL=redis://localhost:6379/0

# API Keys
TWITTER_BEARER_TOKEN=your_twitter_bearer_token
NEWS_API_KEY=your_news_api_key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key
CRYPTOCOMPARE_API_KEY=your_cryptocompare_key

# BNR API Configuration
BNR_BASE_URL=https://www.bnr.ro/nbrfxrates.xml
BNR_UPDATE_INTERVAL=3600

# Exchange Rate APIs
ECB_API_URL=https://www.ecb.europa.eu/stats/eurofxref/eurofxref-daily.xml
FED_API_KEY=your_federal_reserve_api_key

# AI Model Configuration
FINBERT_MODEL_PATH=ProsusAI/finbert
SENTIMENT_MODEL_CACHE_DIR=./models/sentiment
NER_MODEL_CACHE_DIR=./models/ner
SENTIMENT_THRESHOLD=0.7
CONFIDENCE_THRESHOLD=0.8
MAX_SEQUENCE_LENGTH=512

# Message Queue
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
KAFKA_BROKERS=localhost:9092
KAFKA_TOPIC_PREFIX=affectron

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Monitoring
SENTRY_DSN=your_sentry_dsn
PROMETHEUS_PORT=8000
GRAFANA_URL=http://localhost:3001
ELASTICSEARCH_URL=http://localhost:9200

# Application Settings
ENVIRONMENT=development
DEBUG=true
API_VERSION=v1
MAX_REQUESTS_PER_MINUTE=100
REQUEST_TIMEOUT=30

# Supported Currencies and Markets
SUPPORTED_CURRENCIES=RON,EUR,USD,BTC,ETH
BASE_CURRENCY=RON
CRYPTO_PAIRS=RON-BTC,RON-ETH,EUR-BTC,USD-BTC
FX_PAIRS=EUR-RON,USD-RON,GBP-RON

# Data Processing
BATCH_SIZE=100
PROCESSING_INTERVAL_SECONDS=300
DATA_RETENTION_DAYS=90
TEMPORAL_CLUSTER_THRESHOLD=0.8

# Alert Configuration
ALERT_WEBHOOK_URL=https://your-app.com/webhooks/alerts
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# Dashboard Configuration
DASHBOARD_PORT=3000
DASHBOARD_TITLE=AffectRON - Financial Sentiment Analysis
DASHBOARD_REFRESH_INTERVAL=5000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=./logs/affectron.log
MAX_LOG_FILE_SIZE=100MB
LOG_BACKUP_COUNT=5

# Feature Flags
ENABLE_TWITTER_ANALYSIS=true
ENABLE_NEWS_ANALYSIS=true
ENABLE_CRYPTO_ANALYSIS=true
ENABLE_REAL_TIME_ALERTS=true
ENABLE_ML_MODEL_TRAINING=false

# Development Settings
HOT_RELOAD=true
MOCK_EXTERNAL_APIS=false